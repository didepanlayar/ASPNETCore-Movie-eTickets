@model Actor

@{
    ViewData["Title"] = "Actor Details";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Detail for @Model.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" style="max-width: 150px" id="ShowProfilePicturURL" />
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="ProfilePictureURL"></label>
                    <input class="form-control" asp-for="ProfilePictureURL" readonly />
                    <span class="text-danger" asp-validation-for="ProfilePictureURL"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="FullName"></label>
                    <input class="form-control" asp-for="FullName" readonly />
                    <span class="text-danger" asp-validation-for="FullName"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="Bio"></label>
                    <input class="form-control" asp-for="Bio" readonly />
                    <span class="text-danger" asp-validation-for="Bio"></span>
                </div>
                <div class="form-group">
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ShowProfilePicturURL');
            output.src = $("#ProfilePictureURL").val();
        })
    </script>
}